html 
  title DataBases 
  //- Bootstrap
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  link(rel="stylesheet", href="/dbHome.css")
  body 
    div.app-wrapper 
      div.header 
        div.header-1 Motaka Databases
        div.header-2 
          form(action="/help") 
            button(type="submit") Main

      div.nav
        form(action="/help/dbs/users") 
          button(type="submit") Users

        form(action="/help/dbs/confirmCodes" method="get") 
          button(type="submit") Confirm Codes

        form(action="/help/dbs/categories" method="get") 
          button(type="submit") Categories

        form(action="/help/dbs/jobs" method="get") 
          button(type="submit") Jobs
        
      div.content 
        h4.description= message

        //- if we have data
        if data 
          - var temp = true
          - var leftDiv
          - var rightDiv
          - var newDataDiv
          - var eachData

          div.left#left-content 
          div.right#right-content 

          each d in data 
            //- Left part
            if temp === true 
              script.
                leftDiv = document.getElementById('left-content')
                newDataDiv = document.createElement('div')
                eachData = `#{d}` 
                newDataDiv.innerHTML = eachData
                newDataDiv.classList.add('content-data')
                leftDiv.appendChild(newDataDiv)

            //- Right part
            if temp === false
              script. 
                rightDiv = document.getElementById('right-content')
                newDataDiv = document.createElement('div')
                eachData = `#{d}` 
                newDataDiv.innerHTML = eachData
                newDataDiv.classList.add('content-data')
                rightDiv.appendChild(newDataDiv)

            - temp = !temp
        

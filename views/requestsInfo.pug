html 
  title Requests Info 
  //- Bootstrap
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  link(rel="stylesheet", href="/requestsInfo.css")
  body 
    div.app-wrapper 
      //- Header ============================
      div.header 
        div.header-1 Motaka API Requests Info 
        div.header-2 
          form(action="/help") 
            button(type="submit") Main 

      //- Navbar ============================
      div.nav
        form(action="/help/requestsInfo/about" method="get") 
          button(type="submit") About Requests

        form(action="/help/requestsInfo/Grisha" method="get") 
          button(type="submit") Grisha

        form(action="/help/requestsInfo/Mamikon" method="get") 
          button(type="submit") Mamikon

        form(action="/help/requestsInfo/helperRequests" method="get") 
          button(type="submit") Help Requests

      //- Content ============================  
      div.content 
        h4.description= message

        //- ABOUT ==================================================
        if isAboutPage  
          //- BACK URI
          div(style="color: rgba(2, 1, 1, 0.932)").content-data
            div =================================================================================================== 
            div | Back-end URI ==> 
              a(href="https://motaka.herokuapp.com/" style="color: white") https://motaka.herokuapp.com/
            div =================================================================================================== 

          //- NEW DESCRIPTION
          div.content-data If full description is black ==> NEW

          //- AUTHORIZATION
          div.content-data If URI starts with [AUTH] ==> request must contain AUTHORIZATION header

          //- FIELD COMMENT ?
          div.content-data If field comment contain [?] ==> not ready for testing 

          //- FIELD COMMENT !!
          div.content-data If field comment contain [!!] ==> no need to test

          //- DESCRIPTION COMMENT &&
          div.content-data If description ends with [&&] ==> still in progress

          //- GTE and LTE
          div.content-data gte ==> greater than or equal to
          div.content-data lte ==> less than or equal to





        //- Grisha ==================================================
        if isGrishaPage  
          //- ============================ Login ============================
          div.requestBlockName [ Login ]

          //- Login to the site                   
          div.content-data  
            div Description ==> Login to the site
            div Request URI ==> URI/login
            div Request Method ==> 
              span(style="color: black") [POST] 

            div Request Body [JSON] ==> {
            div &emsp;&emsp;"phone": "+374 ** ******"
            div &emsp;&emsp;"password": "********"
            div }

          //- ============================ Reset Password ============================
          div.requestBlockName [ Reset password ]
            
          //- Send sms to phone to reset password 	                   
          div.content-data  
            div Description ==> Send sms to phone to reset password
            div Request URI ==> URI/forgot_password
            div Request Method ==> 
              span(style="color: black") [POST] 

            div Request Body [JSON] ==> {
            div &emsp;&emsp;"phone": "+374 ** ******"
            div }

          //- Send the code and set a new password 	                   
          div.content-data  
            div Description ==> Send the code and set a new password
            div Request URI ==> URI/reset_password
            div Request Method ==> 
              span(style="color: black") [PATCH] 

            div Request Body [JSON] ==> {
            div &emsp;&emsp;"phone": "+374 ** ******" , // [!!]
            div &emsp;&emsp;"confirmCode": "******" ,
            div &emsp;&emsp;"password": "********" ,
            div &emsp;&emsp;"passwordConfirm": "********"
            div }
          
          //- Send confirm code again 	                   
          div.content-data  
            div Description ==> Send confirm code again
            div Request URI ==> URI/resend_code
            div Request Method ==> 
              span(style="color: black") [POST] 

            div Request Body [JSON] ==> {
            div &emsp;&emsp;"phone": "+374 ** ******" , // [!!]
            div }

          //- ============================ Select Role ============================
          div.requestBlockName [ Select Role ]

          //- Change active role [BLACK]
          div.content-data(style="color: black")  
            div Description ==> Change active role
            div Request URI ==> [AUTH]URI/set_role
            div Request Method ==> 
              span(style="color: black") [POST] 

            div Request Body [JSON] ==> {
            div &emsp;&emsp;"role": "provider" , 
            div }

            div Request Headers ==> {
            div &emsp;&emsp;"Authorization": "Bearer accessToken" , 
            div }
          
          //- ============================ Jobs ============================
          div.requestBlockName [ Jobs ]

          //- Get job data with ID [BLACK]
          div.content-data(style="color: black") 
            div Description ==> Get data about job with id 
            div Request URI ==> [AUTH]URI/jobs/:jobId
            div Request Method ==> 
              span(style="color: black") [GET] 

            div Request Headers ==> {
            div &emsp;&emsp;"Authorization": "Bearer accessToken" , 
            div }

          //- Create new job [BLACK]                
          div.content-data(style="color: black") 
            div Description [&&] ==> Create new job 
            div Request URI ==> [AUTH]URI/jobs
            div Have access ==> [USER]
            div Request Method ==> 
              span(style="color: black") [POST] 

            div Request Body [JSON] ==> {
            div &emsp;&emsp;"startDate": "2000-10-21" ,
            div &emsp;&emsp;"startTime": "10:30:00" , 
            div &emsp;&emsp;"duration": 2 , // indicates the job duration in hour
            div &emsp;&emsp;"salary": {
            div &emsp;&emsp;&emsp;&emsp;"currency": "AMD", // default="AMD"
            div &emsp;&emsp;&emsp;&emsp;"cost": 15000
            div &emsp;&emsp;},
            div &emsp;&emsp;"address": "something" , // [?]
            div &emsp;&emsp;"category": "petWalking" ,
            div &emsp;&emsp;"subCategories": ["subCat1", "subCat2"] // [?]
            div }

            div Request Headers ==> {
            div &emsp;&emsp;"Authorization": "Bearer accessToken" , 
            div }

          //- Get all jobs from DB with advanced search and pagination [BLACK]
          div.content-data(style="color: black")
            div Description ==> Get all jobs from DB with advanced search and pagination
            div Request URI ==> [AUTH]URI/jobs

            div Request Query ( URI/jobs?key1=value1&k2=v2 ) ==> {
            div &emsp;&emsp;Searching with job salary: salcost[gte]=1000&salcost[lte]=10000
            div &emsp;&emsp;Searching with job category: caties=petWalking,cleaning,repairing
            div &emsp;&emsp;Searching with job startDate: date[gte]=2022-10-25&date[lte]=2023-07-16
            div &emsp;&emsp;Searching with job duration (must be number from '1' to '6' OR '0'. '0' indicates all.): dur=1,3
            div &emsp;&emsp;Pagination and limit: page=1&limit=15
            div }

            div Request Method ==> 
              span(style="color: black") [GET] 
            
            div Request Headers ==> {
            div &emsp;&emsp;"Authorization": "Bearer accessToken" , 
            div }
          
            br
            div(style="color: black")
              div Request Example ==> in postman you can use PARAMS section (below request method)
            
              div &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;==> URI/jobs?page=1&limit=3&salcost[gte]=10000&salcost[lte]=40000

              div &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;==> URI/jobs?caties=petWalking&date[gte]=2022-10-25&date[lte]=2023-07-16

              div &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;==> URI/jobs?dur=2,6

          //- ============================ Categories ============================
          div.requestBlockName [ Categories ]

          //- Get all categories [BLACK]
          div.content-data(style="color: black") 
            div Description ==> Get all categories
            div Request URI ==> [AUTH]URI/categories
            div Request Method ==> 
              span(style="color: black") [GET]

          //- Get category data with ID [BLACK]
          div.content-data(style="color: black") 
            div Description ==> Get data about category with id 
            div Request URI ==> [AUTH]URI/categories/:categoryId
            div Request Method ==> 
              span(style="color: black") [GET]


        //- Mamikon ==================================================
        if isMamikonPage                    
          //- Register                
          div.content-data
            div Description ==> Register to the site
            div Request URI ==> URI/register
            div Request Method ==> 
              span(style="color: black") [POST] 

            div Request Body [JSON] ==> {
            div &emsp;&emsp;"fistName": "*****" ,
            div &emsp;&emsp;"lastName": "*****" , 
            div &emsp;&emsp;"password": "********" , 
            div &emsp;&emsp;"passwordConfirm": "********" ,
            div &emsp;&emsp;"phone": "+374 ** ******" , 
            div &emsp;&emsp;"email": "*****@mail.ru" ,
            div &emsp;&emsp;"isUser": true ,
            div &emsp;&emsp;"isProvider": false    
            div }
          
          //- Phone verification after register [BLACK]
          div.content-data(style="color: black")
            div Description ==> Phone verification after register
            div Request URI ==> URI/phone_verification_code
            div Request Method ==> 
              span(style="color: black") [POST] 

            div Request Body [JSON] ==> {
            div &emsp;&emsp;"phone": "+374 ** ******", // [!!]
            div &emsp;&emsp;"confirmCode": "******" 
            div }

          //- Get all jobs from DB  [BLACK]
          div.content-data(style="color: black")
            div Description ==> Get all jobs from DB
            div Request URI ==> [AUTH]URI/jobs
            div Request Method ==> 
              span(style="color: black") [GET] 
            
            div Request Headers ==> {
            div &emsp;&emsp;"Authorization": "Bearer accessToken" , 
            div }

          //- Get user data with ID [BLACK]
          div.content-data(style="color: black") 
            div Description ==> Get data about user with id 
            div Request URI ==> [AUTH]URI/users/:userId
            div Request Method ==> 
              span(style="color: black") [GET] 

            div Request Headers ==> {
            div &emsp;&emsp;"Authorization": "Bearer accessToken" , 
            div }



        //- Helper Requests ==================================================
        if isHelperRequestsPage  
          //- Delete User                  
          div.content-data  
            div Description ==> Delete user with phone number
            div Request URI ==> URI/help/deleteUser
            div Request Method ==> 
              span(style="color: black") [DELETE] 
            div Request Body [JSON] ==> {
            div &emsp;&emsp;"phone": "+374 ** ******"
            div }

          //- 
            






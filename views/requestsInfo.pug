html 
  title Requests Info 
  //- Bootstrap
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  link(rel="stylesheet", href="/requestsInfo.css")
  body 
    div.app-wrapper 
      div.header 
        div.header-1 Motaka API Requests Info 
        div.header-2 
          form(action="/help") 
            button(type="submit") Main 

      div.nav
        form(action="/help/requestsInfo/about" method="get") 
          button(type="submit") About requests

        form(action="/help/requestsInfo/Grisha" method="get") 
          button(type="submit") Grisha

        form(action="/help/requestsInfo/Mamikon" method="get") 
          button(type="submit") Mamikon

        form(action="/help/requestsInfo/helperRequests" method="get") 
          button(type="submit") Helper Requests
        
      div.content 
        h4.description= message

        //- ABOUT
        if isAboutPage  
          //- BACK URI
          div(style="color: rgba(2, 1, 1, 0.932)").content-data
            div =================================================================================================== 
            div | Back-end URI ==> 
              a(href="https://motaka.herokuapp.com/" style="color: white") https://motaka.herokuapp.com/
            div =================================================================================================== 

          //- AUTHORIZATION
          div.content-data If URI starts with [AUTH] ===> in time request it must contain AUTHORIZATION header

          //- ? COMMENT
          div.content-data If field comment contain [?] ===> you can't test it

        //- Grisha
        if isGrishaPage                    
          div.content-data  Grisha page


        //- Mamikon
        if isMamikonPage                    
          div.content-data  Mamikon page


        //- Helper Requests
        if isHelperRequestsPage                    
          div.content-data  Helper requests




          //- Get all jobs from DB  
          div.content-data
            div Description ==> Get all jobs from DB
            div Request URI ==> URI/jobs
            div Request Method ==> 
              span(style="color: black") [GET] 
            
            div Request Headers ==> {
            div &emsp;&emsp;"Authorization": "Bearer accessToken" , 
            div }

          //- Get user data with ID 
          div.content-data
            div Description ==> Get data about user with ID 
            div Request URI ==> URI/users/:userId
            div Request Method ==> 
              span(style="color: black") [GET] 




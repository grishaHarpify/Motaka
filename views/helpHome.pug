html
  title Motaka
  //- Bootstrap
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  link(rel="stylesheet", href="/helpHome.css")
  body
    div.app-wrapper
      //- Header ============================
      div.header
        div(style="font-size: 25px") Motaka Helper

      //- Content ============================
      div.content 
        //- Content - URIs ========================================================
        div.content-uris
          h4.content-uris-header Back-end and Front-end URIs

          div.content-uris-data
            //- ============================ Back-end ============================
            div.uris-data-left  Back-end URI&nbsp;
            input(type="text" value="https://motaka.herokuapp.com/" id="backUri" disabled)
            script.
              function copyBackUrl() {
                let copyText = document.getElementById("backUri")
                copyText.select()
                copyText.setSelectionRange(0, 99999) /* For mobile devices */
                navigator.clipboard.writeText(copyText.value)
              }

            div.uris-data-right
              button(onclick="copyBackUrl()" title="Back-end").copy-btn Copy URI
            //- ============================ Back-end finish ============================
              
            //- ============================ Front-end ============================
            br
            hr
            div.uris-data-left Front-end URI
            input(type="text" value="http://motaka.xyz/" id="frontUri" disabled)
            script.
              function copyFrontUrl() {
                let copyText = document.getElementById("frontUri")
                copyText.select()
                copyText.setSelectionRange(0, 99999) /* For mobile devices */
                navigator.clipboard.writeText(copyText.value)
              }

            div.uris-data-right
              button(onclick="copyFrontUrl()" title="Front-end").copy-btn Copy URI
            //- ============================ Front-end finish ============================
            
        //- Content HelperRoutes ========================================================
        div.content-buttons
          h4.content-buttons-header Available Helper Routes
          
          div.content-buttons-data
            form(action="/help/dbs/all")
              button(type="submit") Databases

            form(action="/help/requestsInfo/all" method="get")
              button(type="submit") API Requests Info

